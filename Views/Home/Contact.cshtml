@{
    ViewData["Title"] = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center mt-1">Susam Sokağı</h4>
                    <h5 class="text-center mt-1"> </h5>

                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="text-justify"></p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center">
                        <ul class="list-group list-group-horizontal-lg">
                            <li class="list-item">
                                <i class="fa fa-map-marker m-3"></i> Avşar Kampüsü , Kahramanmaraş, Türkiye
                            </li>
                            <li class="list-item"><i class="fa fa-phone m-3"></i> +90 544 278 36 49</li>
                        </ul>
                    </div>
                    <div class="d-flex justify-content-center">
                        <ul class="list-group list-group-horizontal">
                            <li class="list-item">
                                <a href="@ViewData["instagramLink"]" target="_blank">
                                    <i class="fa fa-instagram fa-2x m-3"></i>
                                </a>
                            </li>
                            <li class="list-item">
                                <a href="https://wa.me/@ViewData["WptelefonNo"]" target="_blank">
                                    <i class="fa fa-whatsapp fa-2x m-3"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>